---
import Layout from '../layouts/Layout.astro';
import { SITE_TITLE } from '../consts';

// Helper function for creating properly based paths
function getPath(path: string) {
  const base = import.meta.env.BASE_URL || '';
  // Ensure base ends with slash if not empty
  const baseWithSlash = base && !base.endsWith('/') ? `${base}/` : base;
  // Remove leading slash from path if it exists
  const cleanPath = path.startsWith('/') ? path.slice(1) : path;
  // Join base with path
  return `${baseWithSlash}${cleanPath}`;
}
---

<Layout
  title={`Page Not Found | ${SITE_TITLE}`}
  description="The page you are looking for cannot be found. Navigate back to our blog home page."
>
  <div class="error-container fade-in">
    <h1>404</h1>
    <h2>Page Not Found</h2>

    <p>The page you're looking for doesn't exist or has been moved.</p>

    <div class="actions">
      <a href={getPath('')} class="home-button">Go to Homepage</a>
      <a href={getPath('blog')} class="blog-button">Browse Articles</a>
      <a href={getPath('search')} class="search-button">Search</a>
    </div>

    <div class="suggestions">
      <h3>You might be interested in:</h3>
      <ul>
        <li><a href={getPath('map')}>Content Map</a></li>
        <li><a href={getPath('tags')}>Browse by Tags</a></li>
        <li><a href={getPath('about')}>About This Blog</a></li>
      </ul>
    </div>
  </div>
</Layout>

<style>
  .error-container {
    text-align: center;
    padding: 4rem 1rem;
    max-width: 600px;
    margin: 0 auto;
  }

  h1 {
    font-size: 8rem;
    margin: 0;
    line-height: 1;
    color: var(--accent);
    font-weight: 700;
  }

  h2 {
    font-size: 2rem;
    margin: 0 0 2rem;
    color: var(--text-primary);
  }

  p {
    font-size: 1.2rem;
    margin-bottom: 2.5rem;
    color: var(--text-secondary);
  }

  .actions {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
    justify-content: center;
    margin-bottom: 3rem;
  }

  .actions a {
    display: inline-block;
    padding: 0.8rem 1.5rem;
    border-radius: 8px;
    text-decoration: none;
    font-weight: 500;
    transition: all 0.2s ease;
  }

  .home-button {
    background-color: var(--accent);
    color: var(--bg-primary);
  }

  .home-button:hover {
    background-color: var(--accent-light);
  }

  .blog-button,
  .search-button {
    background-color: var(--bg-secondary);
    color: var(--text-primary);
    border: 1px solid var(--border-color);
  }

  .blog-button:hover,
  .search-button:hover {
    background-color: var(--bg-primary);
    border-color: var(--accent);
  }

  .suggestions {
    margin-top: 3rem;
    padding-top: 2rem;
    border-top: 1px solid var(--border-color);
  }

  .suggestions h3 {
    font-size: 1.2rem;
    margin-bottom: 1rem;
  }

  .suggestions ul {
    list-style: none;
    padding: 0;
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
    justify-content: center;
  }

  .suggestions li a {
    display: inline-block;
    padding: 0.5rem 1rem;
    border-radius: 4px;
    background-color: var(--bg-secondary);
    color: var(--text-primary);
    text-decoration: none;
    font-size: 0.9rem;
    transition: all 0.2s ease;
  }

  .suggestions li a:hover {
    background-color: var(--accent);
    color: var(--bg-primary);
  }

  @media (max-width: 768px) {
    h1 {
      font-size: 6rem;
    }

    h2 {
      font-size: 1.5rem;
    }

    .actions {
      flex-direction: column;
    }

    .actions a {
      width: 100%;
    }
  }
</style>
