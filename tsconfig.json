{
  "extends": "astro/tsconfigs/strict",
  "include": [
    ".astro/types.d.ts",
    "src/**/*",
    "e2e/**/*",
    "playwright-a11y.config.ts",
    "scripts/**/*"
  ],
  "exclude": ["dist"],
  "compilerOptions": {
    "strictNullChecks": true,
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "baseUrl": ".",
    "paths": {
      "astro:content": ["node_modules/astro/content/types.d.ts"]
    }
  }
}
